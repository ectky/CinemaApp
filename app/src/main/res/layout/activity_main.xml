<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.elitsa.libraries.cinemaapp.app.models.CategoryCard"/>
        <import type="com.elitsa.libraries.cinemaapp.ui.home.HomeController"/>
        <import type="com.elitsa.libraries.cinemaapp.utils.enums.LayoutManagerTypes"/>
        <import type="android.view.View.OnClickListener"/>

        <variable
            name="myListCard"
            type="CategoryCard" />

        <variable
            name="controller"
            type="com.elitsa.libraries.cinemaapp.ui.home.HomeController" />

        <variable
            name="layoutManagerType"
            type="LayoutManagerTypes" />

        <variable
            name="imgUrl"
            type="String" />

        <variable
            name="clickListener"
            type="OnClickListener" />

    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".ui.home.MainActivity">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.appbar.MaterialToolbar
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@color/colorPrimaryDark"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:text="@string/movies_text"
                    android:textAppearance="@style/ToolbarTitleText"/>

            </RelativeLayout>


            <!--
            <include layout="@layout/card_featured_movie"
                app:imgUrl="@{imgUrl}"/>-->

            <include layout="@layout/view_holder_gradient_card"
                app:model="@{myListCard}"
                app:clickListener="@{clickListener}"
                />

            <com.airbnb.epoxy.EpoxyRecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:attachEpoxyController="@{controller}"
                app:epoxyLayoutManager="@{layoutManagerType}"
                />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</layout>